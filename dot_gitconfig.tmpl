# Main settings
[user]
	name = Tag Howard
	email = tag.howard1080@gmail.com
	{{- if hasKey . "gpgkey" }}
	signingkey = {{ .gpgkey }}
	{{- end}}

[core]
{{ if lookPath "delta" }}
    pager = delta
{{end}}
    autocrlf = input

[init]
	defaultBranch = main

[pull]
        rebase = false

# Standard UI settings
[color]
    ui = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = red

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

{{ if lookPath "delta" }}
# Delta settings
[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true  # use n and N to move between diff sections
    line-numbers = true
{{ end }}
{{- if hasKey . "gpgkey" }}
[commit]
    gpgsign = true
{{- end}}
