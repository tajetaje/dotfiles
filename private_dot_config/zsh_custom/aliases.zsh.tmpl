{{ if lookPath "lsd" }}
alias ls='lsd'
{{ end }}
alias l='ls -l'
alias la='ls -a'
alias lla='ls -la'
alias lt='ls --tree'

alias rmr='rm -r'
{{ if lookPath "bat" }}
alias cat='bat --paging=never --style=plain'
{{ end }}
{{ if lookPath "kitty" }}
[[ "$TERM" == "xterm-kitty" ]] && alias ssh="kitty +kitten ssh"
{{ end }}
